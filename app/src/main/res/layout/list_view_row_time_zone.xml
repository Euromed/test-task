<?xml version="1.0" encoding="utf-8"?>
<com.example.user.testtask.ListViewRowTimeZone
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/time_zone_checked">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_zone_offset"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:text="+07:00"
        android:layout_marginTop="@dimen/default_gap"
        android:layout_marginEnd="@dimen/default_gap"
        android:layout_marginRight="@dimen/default_gap" />
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time_zone_name"
        tools:text="Красноярск"
        android:layout_margin="@dimen/default_gap"
        android:layout_toStartOf="@+id/time_zone_offset"
        android:layout_toLeftOf="@+id/time_zone_offset" />
</com.example.user.testtask.ListViewRowTimeZone>
